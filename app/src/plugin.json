{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "Mirador Explorer",
  "id": "miradorstack-miradorexplorer-app",
  "backend": true,
  "executable": "gpx_mirador_explorer",
  "info": {
    "keywords": ["app", "logs", "monitoring", "observability"],
    "description": "Mirador Explorer app for log discovery, schema browsing, and observability",
    "author": {
      "name": "Miradorstack"
    },
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=12.2.0",
    "plugins": [
      {
        "id": "miradorstack-miradorcoreconnector-datasource",
        "name": "Mirador Core Connector",
        "version": "^1.0.0",
        "type": "datasource"
      }
    ]
  },
  "includes": [
    {
      "type": "page",
      "icon": "search-plus",
      "name": "Discover",
      "path": "/a/%PLUGIN_ID%/discover",
      "addToNav": true,
      "defaultNav": true
    },
    {
      "type": "page",
      "icon": "layers",
      "name": "Schema Browser",
      "path": "/a/%PLUGIN_ID%/schema",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "icon": "cog",
      "name": "Configuration",
      "path": "/plugins/%PLUGIN_ID%",
      "role": "Admin",
      "addToNav": true
    },
    {
      "type": "panel",
      "name": "Logs Explorer Panel",
      "description": "Launch Mirador Discover with a preconfigured Mirador query directly from dashboards.",
      "path": "panels/logsExplorer/module",
      "keywords": ["mirador", "logs", "discover"],
      "sort": 10
    }
  ]
}
