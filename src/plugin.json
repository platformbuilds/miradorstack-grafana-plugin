{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "Miradorstack-Connect",
  "id": "platformbuildspvtltd-miradorstackconnect-app",
  "backend": true,
  "executable": "gpx_miradorstack_connect",
  "info": {
    "keywords": ["observability", "logs", "metrics", "traces", "mirador"],
    "description": "Miradorstack Connect - A comprehensive observability platform for logs, metrics, and traces analysis",
    "author": {
      "name": "Platformbuildspvtltd"
    },
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "includes": [
    {
      "type": "datasource",
      "name": "Mirador Core Connector",
      "id": "mirador-core-connector"
    },
    {
      "type": "page",
      "name": "Onboarding",
      "path": "/a/%PLUGIN_ID%/onboarding",
      "icon": "info-circle",
      "addToNav": true,
      "defaultNav": true
    },
    {
      "type": "page", 
      "name": "Discover",
      "path": "/a/%PLUGIN_ID%/discover",
      "icon": "search",
      "addToNav": true
    },
    {
      "type": "page",
      "name": "Reports", 
      "path": "/a/%PLUGIN_ID%/reports",
      "icon": "chart-line",
      "addToNav": true
    },
    {
      "type": "page",
      "name": "AI Insights",
      "path": "/a/%PLUGIN_ID%/ai-insights", 
      "icon": "ai",
      "addToNav": true
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=10.4.0",
    "plugins": []
  }
}
